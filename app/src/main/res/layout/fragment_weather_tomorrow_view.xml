<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="viewModel"
            type="com.example.weatherforecast.ui.tomorrowweatherview.WeatherTomorrowViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.tomorrowweatherview.WeatherTomorrowViewFragment">

        <TextView
            android:id="@+id/textViewCity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{viewModel.cityName}"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textViewRegion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{viewModel.region}"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textViewCountry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{viewModel.country}"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textViewLocalTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{viewModel.localTime}"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textViewCondition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{viewModel.condition}"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textViewMaxTempC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{viewModel.maxTempC}"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textViewMaxTempF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{viewModel.maxTempF}"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textViewMinTempC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{viewModel.minTempC}"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textViewMinTempF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{viewModel.minTempF}"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textViewAvgTempC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{viewModel.avgTempC}"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textViewAvgTempF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{viewModel.avgTempF}"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textViewMaxWindKph"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{viewModel.maxWindKph}"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textViewMaxWindMph"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{viewModel.maxWindMph}"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textViewAvgHumidity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{viewModel.avgHumidity}"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textViewRainChance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{viewModel.chanceOfRain}"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textViewSnowChance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{viewModel.chanceOfSnow}"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textViewUv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{viewModel.uv}"
            android:textSize="24sp" />
    </LinearLayout>
</layout>
